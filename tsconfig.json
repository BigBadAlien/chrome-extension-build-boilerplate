{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "es6",
    "jsx": "react",
    "allowJs": true,
    "sourceMap": true,
    "target": "es5",
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "noEmitHelpers": false,
    "noEmitOnError": true,
    "noResolve": false,
    "removeComments": true,
    "newLine": "LF",
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "importHelpers": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ]
  },
  "exclude": [
    "node_modules/*"
  ]
}
